{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h2>Product index</h2>
    <a href="{{ path('product_new') }}" class="btn btn-success mb-2"><i class="bi bi-plus-circle"></i>&nbsp;Create</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price |format_number({fraction_digit:2}) }}</td>
                <td>{{ product.description }}</td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-info btn-sm"><i class="bi bi-eye-fill"></i></a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-warning btn-sm"><i class="bi bi-pencil-fill"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

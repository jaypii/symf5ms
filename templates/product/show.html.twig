{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h2>Product</h2>
    <div class="card bg-info mb-2 p-2">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
        </tbody>
    </table>
    </div>

    <a href="{{ path('product_index') }}" class="btn btn-primary"><i class="bi bi-chevron-double-left"></i>Back</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-warning"><i class="bi bi-pencil-fill"></i>&nbsp;Edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}

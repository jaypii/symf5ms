<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
        <!-- Custom CSS File -->
        {% block stylesheets %}{% endblock %}
    </head>
    <body style="margin-top: 80px">
        <!-- TOP Navigation -->
        <nav class="navbar navbar-expand-lg fixed-top navbar-light bg-light p-2">
            <a class="navbar-brand" href="/">
                <img src="{{ asset('img/symfony_black_03.png') }}" width="40px" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    {% block topnav %}
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('home') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('lucky') }}">Lucky</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('product_index') }}">Product List</a>
                    </li>

                    {% endblock %}
                </ul>
            </div>
        </nav>

        <div class="container-fluid mt-5">
            {% block body %}{% endblock %}
            <!-- Footer -->
            <div class="card bg-light mt-3 p-2">
                <div class="row">
                    <div class="col">
                        <p>&copy;2021, J. Polzin</p>
                    </div>
                    <div class="col"><p>&nbsp;</p></div>
                    <div class="col"><p class="text-end">{{ "now"|date("d.m.Y H:i", "Europe/Zurich") }}</p></div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    </body>
</html>
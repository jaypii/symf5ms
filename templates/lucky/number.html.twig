{% extends 'base.html.twig' %}

{% block title %}Good luck ;-){% endblock %}

{% block body %}
    <h2>{{ page_title }}</h2>
    <div class="row">
        <div class="col">
            <div class="card p-1">
                <div class="card-body">
                    <h3>Your lucky number is {{ number }}</h3>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card p-1">
                <div class="card-body">
                    <h5>Lotto Tip:</h5>
                    {% for val in lotto %}
                        <strong>{{ val }}&nbsp;</strong>
                    {% endfor %}
                    <br>Perhaps you are lucky ;-)
                 </div>
            </div>
        </div>
    </div>
{% endblock %}